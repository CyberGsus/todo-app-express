{
  "name": "note-app-vue",
  "description": "A simple note app with Vuetify frontend and Express backend",
  "license": "MIT",
  "scripts": {
    "setup:server": "cd server && yarn install",
    "setup:client": "cd client && yarn install",
    "setup:*": "yarn setup:server && yarn setup:client",
    "start:server": "cd server && yarn start",
    "build:client": "mkdir -p server/public && cd client && yarn build",
    "clean:db": "rm -rf server/db",
    "clean:build": "rm -rf server/public",
    "clean:*": "yarn clean:build && yarn clean:db"
  }
}
